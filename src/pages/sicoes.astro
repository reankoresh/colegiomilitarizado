---
import Layout from "../layouts/Layout.astro";
import Title from "../components/Title.astro";
---

<Layout>
  <div class="w-full h-dvh flex items-center justify-center bg-gradient-to-br from-slate-50 to-slate-100">
    <div class="bg-white text-gray-500 max-w-96 mx-4 md:p-6 p-4 text-left text-sm rounded-xl shadow-[0px_0px_10px_0px] shadow-black/10">
      <Title tag="h3" class="mb-2 text-center">SICOES</Title>
      <Title tag="h6" color="secondary" class="mb-6 text-center">Sistema de Control Escolar</Title>
      <form>
        <input id="email" class="w-full bg-transparent border my-3 border-gray-500/30 outline-none rounded-full py-2.5 px-4" type="email" placeholder="Ingresa tu matrícula" required>
        <input id="password" class="w-full bg-transparent border mt-1 border-gray-500/30 outline-none rounded-full py-2.5 px-4" type="password" placeholder="Ingresa tu contraseña" required>
        <div class="text-right py-4">
          <a class="text-blue-600" href="#">Olvidaste la contraseña</a>
        </div>
        <button type="submit" class="w-full mb-3 bg-indigo-500 py-2.5 rounded-full text-white">Iniciar Sesión</button>
      </form>
      <p class="text-center mt-4 text-stone-300">No tienes cuenta? <a href="#" class="text-blue-500">Registrate</a></p>
  
      <button type="button" class="w-full flex items-center gap-2 justify-center my-3 bg-white border border-gray-500/30 py-2.5 rounded-full text-gray-800">
        <img class="h-4 w-4" src="https://raw.githubusercontent.com/prebuiltui/prebuiltui/main/assets/login/googleFavicon.png" alt="googleFavicon">
        Iniciar con Google
      </button>
    </div>
  </div>
</Layout>
